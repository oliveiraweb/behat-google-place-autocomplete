#!/usr/bin/env bash

ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"

. "${ROOT}"/docker/lib/docker_host_user_id.sh

docker run \
    -e LOCAL_USER_ID=$DOCKER_HOST_USER_ID \
    --env-file "$ROOT"/docker/.env \
    -i \
    -t \
    --rm \
    -v $(pwd):/workdir \
    -v ~/.cache:/home/user/.cache \
    -v ~/.ssh:/home/user/.ssh \
    chekote/node:9.0.0 \
    yarn "$@"
